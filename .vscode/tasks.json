{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build main.cpp",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}/build/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build Main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-o",
                "${workspaceFolder}/main",
                "${workspaceFolder}/src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the main executable"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-o",
                "${workspaceFolder}/tests/test_main",
                "${workspaceFolder}/tests/test_main.cpp",
                "-lgtest",
                "-lgtest_main",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the test executable"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/tests/test_main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Run the tests"
        }
    ],
    "version": "2.0.0"
}